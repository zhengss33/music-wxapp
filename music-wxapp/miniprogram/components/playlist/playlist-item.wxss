/* components/playlist.wxss */
.playlist-item {
  position: relative;
  width: 220rpx;
  font-size: 28rpx;
  line-height: 1.2;
  margin-bottom: 30rpx;
}

.play-pic {
  width: 100%;
  height: 220rpx;
}

.play-count {
  position: absolute;
  top: 4px;
  right: 4px;
  color: #fff;
  font-size: 24rpx;
}

.play-name {
  font-size: 28rpx;
  line-height: 1.2;
  padding: 2px 0 0 6px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}